import ExternalLink from '../components/ExternalLink.astro'

const media: ProjectItem[] = [
  {
    type: 'video',
    url: '/project-sphere-media/diffusion.mp4',
    aspect: 1,
    title: 'Diffusion algorithm',
  },
  {
    type: 'video',
    url: '/project-sphere-media/falling-words.mp4',
    aspect: 1.75,
    title: 'Falling words',
  },
  {
    type: 'video',
    url: '/project-sphere-media/green-hills.mp4',
    aspect: 1,
    title: 'Green hills',
  },
  {
    type: 'video',
    url: '/project-sphere-media/grid.mp4',
    aspect: 1,
    title: 'Pattern generator',
  },
  {
    type: 'video',
    url: '/project-sphere-media/idomeneo.mp4',
    aspect: 1.77,
    title: 'Idomeneo digital poster',
  },
  {
    type: 'video',
    url: '/project-sphere-media/marching-squares-lowres.mp4',
    aspect: 1,
    title: 'Marching squares lowres',
  },
  {
    type: 'video',
    url: '/project-sphere-media/marching-squares.mp4',
    aspect: 1,
    title: 'Marching squares',
  },
  {
    type: 'video',
    url: '/project-sphere-media/noise-gallery.mp4',
    aspect: 1,
    title: 'Noise gallery',
  },
  {
    type: 'video',
    url: '/project-sphere-media/number-grid.mp4',
    aspect: 1,
    title: 'Number grid',
  },
  {
