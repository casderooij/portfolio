    type: 'video',
    url: '/project-sphere-media/window.mp4',
    aspect: 1,
    title: 'CSS window',
  },
  {
    type: 'image',
    url: 'https://placehold.co/10',
    aspect: 1,
    title: 'One minute capture',
  },
